sources:
  /opt: http://ec2-downloads.s3.amazonaws.com/cloudwatch-samples/CloudWatchMonitoringScripts-v1.1.0.zip

commands:
  01-setupcron:
    command: echo "* * * * * root perl /opt/aws-scripts-mon/mon-put-instance-data.pl --mem-util --mem-used --mem-avail --swap-util --swap-used --disk-space-util --disk-space-used --disk-space-avail --disk-path=/ --auto-scaling --from-cron >/dev/null" >/etc/cron.d/cwpump
  02-setupcron:
    command: echo "* * * * * root perl /opt/aws-scripts-mon/mon-put-instance-data.pl --mem-util --mem-used --mem-avail --swap-util --swap-used --aggregated=only --from-cron >/dev/null" >>/etc/cron.d/cwpump
  03-setupcron:
    command: echo "* * * * * root perl /opt/aws-scripts-mon/mon-put-instance-data.pl --disk-space-util --disk-space-used --disk-space-avail --disk-path=/ --aggregated=only --from-cron >/dev/null" >>/etc/cron.d/cwpump
  04-changeperm:
    command: chmod 644 /etc/cron.d/cwpump
